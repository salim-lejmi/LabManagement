{% extends 'navbar.html.twig' %}

{% block title %}List of Researchers{% endblock %}

{% block body %}
 <h1>List of Researchers</h1>
 <table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Chercheur</th>
            <th>Projects</th>
            <th>Publications</th>
            <th>Equipments</th>
        </tr>
    </thead>
    <tbody>
        {% for user in users %}
            <tr>
              <td>{{ user.username }}</td>
                <td>{{ user.chercheur }}</td>

              <td>
                 <ul>
                     {% for project in user.projects %}
                         <li>{{ project.title }}</li>
                     {% endfor %}
                 </ul>
              </td>
              <td>
                 <ul>
                     {% for publication in user.publications %}
                         <li>{{ publication.title }}</li>
                     {% endfor %}
                 </ul>
              </td>
              <td>
                 <ul>
                     {% for equipment in user.equipments %}
                         <li>{{ equipment.name }}</li>
                     {% endfor %}
                 </ul>
              </td>
            </tr>
        {% else %}
            <tr>
              <td colspan="4">No researchers found.</td>
            </tr>
        {% endfor %}
    </tbody>
 </table>
{% endblock %}
